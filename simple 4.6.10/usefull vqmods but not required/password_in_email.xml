	<vqmver>2.0</vqmver>
	<author>deeman</author>
    <file name="catalog/model/account/customer.php">
		<operation>
			<search position="after"><![CDATA[
            $message .= $this->url->link('account/login', '', 'SSL') . "\n\n";
            ]]></search>
			<add><![CDATA[
			$message .= $this->language->get('text_password') . ' ' . $data['password'] . "\n\n";
            ]]>
            </add>
		</operation>
	</file>
